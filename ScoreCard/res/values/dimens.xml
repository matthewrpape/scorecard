    <!-- margin sizes -->
    <dimen name="margin_size_small">6dp</dimen>
    <dimen name="margin_size_medium">12dp</dimen>
    <dimen name="margin_size_large">18dp</dimen>
    <dimen name="activity_horizontal_margin">@dimen/margin_size_large</dimen>
    <dimen name="activity_vertical_margin">@dimen/margin_size_large</dimen>

    <!-- text sizes -->
    <dimen name="text_size_title">56sp</dimen>
    <dimen name="text_size_subtitle">42sp</dimen>
    <dimen name="text_size_primary">34sp</dimen>
    <dimen name="text_size_secondary">20sp</dimen>
    <dimen name="text_size_tertiary">12sp</dimen>

	<!-- ui backgrounds -->
	<dimen name="stroke_width">3dp</dimen>
	<dimen name="small_corner_radius">3dp</dimen>
	<dimen name="large_corner_radius">7dp</dimen>

