<resources>

    <!-- app scheme -->
    <color name="white">#fff</color>
    <color name="light_grey">#666</color>
    <color name="dark_grey">#333</color>
    <color name="black">#000</color>
    <color name="orange">#fc0</color>
    <color name="blue">#3cf</color>
    <color name="dark_blue">#06c</color>

    <!-- button -->
    <color name="button_bg_enabled">@color/black</color>
    <color name="button_bg_disabled">@color/dark_grey</color>
    <color name="button_bg_pressed">@color/dark_blue</color>
    <color name="button_bg_border_enabled">@color/blue</color>
    <color name="button_bg_border_disabled">@color/light_grey</color>
    <color name="button_bg_border_pressed">@color/white</color>
    <color name="button_fg">@color/orange</color>

	<!-- list item -->
	<color name="list_item_bg_enabled">@color/black</color>
	<color name="list_item_bg_disabled">@color/dark_grey</color>
	<color name="list_item_bg_pressed">@color/dark_blue</color>
	<color name="list_item_bg_activated">@color/dark_blue</color>

	<!-- text view -->
	<color name="text_view_bg_enabled">@color/black</color>
	<color name="text_view_bg_border_enabled">@color/blue</color>

</resources>